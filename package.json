{
  "name": "screeps-typescript-starter",
  "version": "3.0.0",
  "description": "",
  "main": "index.js",
  "//": "If you add or change the names of destinations in screeps.json, make sure you update these scripts to reflect the changes",
  "scripts": {
    "lint": "tslint --fix -p tsconfig.json \"src/**/*.ts\"",
    "build": "rollup -c",
    "push-ptr": "rollup -c --environment DEST:ptr",
    "push-main": "rollup -c --environment DEST:main",
    "push-pserver": "rollup -c --environment DEST:pserver",
    "push-sim": "rollup -c --environment DEST:sim",
    "push-s+": "rollup -c --environment DEST:s+",
    "push-s+2": "rollup -c --environment DEST:s+2",
    "test": "npm run test-unit && npm run test-integration",
    "debug-test-unit": "rollup -c rollup.test-unit-config.js",
    "test-unit": "rollup -c rollup.test-unit-config.js && mocha dist/test-unit.bundle.js -R mocha-pretty-spec-reporter",
    "wbut": "rollup -c rollup.test-unit-config.js --watch",
    "wmut": "mocha --watch dist/test-unit.bundle.js -R mocha-pretty-spec-reporter",
    "watch-test-unit": "rollup -c rollup.test-unit-config.js --watch && mocha --watch dist/test-unit.bundle.js -R mocha-pretty-spec-reporter",
    "test-integration": "npm run build && rollup -c rollup.test-integration-config.js && mocha dist/test-integration.bundle.js -R mocha-pretty-spec-reporter",
    "watch": "rollup -cw",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-sim": "rollup -cw --environment DEST:sim",
    "watch-s+": "rollup -cw --environment DEST:s+",
    "pretty": "prettier --print-width 80 --no-semi --single-quote --trailing-comma es5 --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/screepers/screeps-typescript-starter.git"
  },
  "author": "",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/screepers/screeps-typescript-starter/issues"
  },
  "homepage": "https://github.com/screepers/screeps-typescript-starter#readme",
  "devDependencies": {
    "@fluffy-spoon/substitute": "^1.89.0",
    "@types/chai": "^4.1.6",
    "@types/lodash": "^3.10.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.5",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "@typescript-eslint/typescript-estree": "^2.6.1",
    "@types/screeps": "screepers/typed-screeps#master",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prefer-arrow": "^1.1.6",
    "eslint-plugin-prettier": "^3.1.1",
    "lodash": "^3.10.1",
    "mocha": "^5.2.0",
    "mocha-pretty-spec-reporter": "0.1.0-beta.2",
    "prettier": "^1.19.1",
    "rollup": "^0.63.4",
    "rollup-plugin-buble": "^0.19.4",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-nodent": "^0.2.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-screeps": "^0.1.2",
    "rollup-plugin-typescript2": "^0.16.1",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "screeps-server-mockup": "^1.4.3",
    "source-map": "~0.6.1"
  }
}
